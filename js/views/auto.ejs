        myChart.data.datasets[0].data.push(getRandomIntInclusive(1, 25));
        // re-render the chart
        myChart.update();
    }
    setInterval(addRand, 1000);*/


    const read_data = () => {
        fetch('/mutable-data').then(tmp => tmp.json()).then(data => {
            console.log (typeof JSON.parse(data));
            data = JSON.parse(data);
            console.log(data.nr);
            if(data.auto === false) {
                window.location.href = "/manual";
            }
            else {
                const text = document.getElementById('pressure-text');
                text.innerText = "PRESSURE LEVEL IS " + data.pressure.toString() + " Pa";
                    myChart.data.labels.push(data.nr);
                    myChart.data.datasets[0].data.push(data.pressure);

                // re-render the chart
                myChart.update();
            }

        })
    }

    setInterval(read_data, 1000);



    function epoch_to_hh_mm_ss(epoch) {
